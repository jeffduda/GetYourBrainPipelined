Bootstrap: docker
From: ubuntu:latest

%environment
    export LC_ALL=C
    export PATH=/usr/games:$PATH

%post
    apt update
    apt install -y cowsay
    echo "package data" /opt/pkg_data.txt

%setup 
    touch pkg_data.txt

%files
    pkg_data.txt /opt

%runscript
    cowsay "Hello Example-Easy"
